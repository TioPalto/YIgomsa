<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:paddingTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_green">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/mine_img_head"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:src="@mipmap/head1"
            android:layout_margin="25dp"
            app:shapeAppearanceOverlay="@style/circleImageStyle"
            android:padding="1dp"
            app:strokeColor="@color/purple_200"
            app:strokeWidth="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mine_img_head"
            android:layout_toEndOf="@+id/mine_img_head"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/mine_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:text="用户名"
                android:textColor="@color/wathet"/>

            <TextView
                android:id="@+id/mine_txt_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mine_txt_name"
                android:textSize="14sp"
                android:text="用户等级"
                android:layout_marginTop="10dp"
                android:textColor="@color/wathet"/>

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/layout_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@mipmap/balance"/>

            <TextView
                android:id="@+id/layout_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/layout_img1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/txt_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1000"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/txt_light_gray_1"/>

        <RelativeLayout
            android:id="@+id/click_buy_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/layout_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@mipmap/buy_record"/>

            <TextView
                android:id="@+id/layout_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费记录"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/layout_img2"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_arrow"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/txt_light_gray_1"/>

        <RelativeLayout
            android:id="@+id/click_recharge_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/layout_img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@mipmap/recharge"/>

            <TextView
                android:id="@+id/layout_txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值记录"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/layout_img3"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_arrow"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/txt_light_gray_1"/>

        <Button
            android:id="@+id/btn_exit_login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:text="@string/exit_login"
            android:textSize="20dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/buttom"
            android:textColor="@color/white"
            android:layout_marginEnd="30dp"/>

    </LinearLayout>
</LinearLayout>