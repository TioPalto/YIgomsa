<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/holder_layout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品详情"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/click_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/left_arrow"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/txt_light_gray_1"/>

        <TextView
            android:id="@+id/txt_good_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/img_good"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:layout_marginStart="10dp"
            android:text="商品简介"/>

        <TextView
            android:id="@+id/txt_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/txt_light_gray_1"
        android:layout_above="@+id/layout_bottom"/>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/txt_good_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:text="单价"
            android:textColor="@color/colorTextTitle"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txt_good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/txt_good_num"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:text="￥0"
            android:textColor="@color/big_red"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_add_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:text="加入购物车"
            android:textColor="@color/text_black"
            android:background="@drawable/shoop_button"
            android:textSize="14sp"/>

        <!--<com.google.android.material.button.MaterialButton
            android:id="@+id/btn_check_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:text="购买"
            android:textColor="@color/white"
            app:backgroundTint="@color/big_red"
            app:strokeWidth="1dp"
            app:strokeColor="@color/white"
            app:cornerRadius="10dp"
            android:textSize="14sp"/>-->
    </RelativeLayout>
</RelativeLayout>